@{
    ViewData["Title"] = "Applicant Form";
}
<body>
    <div class="container text-center">
        
            <div class="row">
                <div class="col-lg-3 col-md-3"></div>
                <div class="col-lg-6 col-md-6">
                    <form class="needs-validation" novalidate>

                        <!-- Title -->
                        <h1>Contact Details</h1>
                        <h5>Please enter your contact details</h5>


                        <br><br>

                        <!-- FORM -->
                        <div class="row">

                            <!-- First Name -->
                            <div class="form-group col-sm-6">
                                <input type="text" class="form-control" placeholder="First Name*" value="" required>
                                <div class="invalid-feedback">
                                    Valid first name is required.
                                </div>
                            </div>


                            <!-- Last Name -->
                            <div class="form-group col-sm-6">
                                <input type="text" class="form-control" placeholder="Last Name*" required>
                                <div class="invalid-feedback">
                                    Valid last name is required.
                                </div>
                            </div>

                        </div>


                        <!-- Email Address-->
                        <div class="form-group">
                            <input type="email" class="form-control" placeholder="Email Address*" required>
                            <div class="invalid-feedback">
                                Please enter a valid email address.
                            </div>
                        </div>


                        <div class="row">

                            <!-- Mobile Number-->
                            <div class="form-group col-sm-6">
                                <input type="text" class="form-control" placeholder="Mobile Number">
                            </div>


                            <!-- Phone Number -->
                            <div class="form-group col-sm-6">
                                <input type="text" class="form-control" placeholder="Phone Number">
                            </div>

                        </div>


                        <!-- Street Name -->
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Street Name*" required>
                            <div class="invalid-feedback">
                                Please provide a valid street name.
                            </div>
                        </div>


                        <!-- Suburb -->
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Suburb*" required>
                            <div class="invalid-feedback">
                                Please provide a valid suburb.
                            </div>
                        </div>


                        <div class="row">

                            <!-- City -->
                            <div class="form-group col-sm-9">
                                <input type="text" class="form-control" placeholder="City*" required>
                                <div class="invalid-feedback">
                                    Please provide a valid city name.
                                </div>
                            </div>


                            <!-- Postcode -->
                            <div class="form-group col-sm-3">
                                <input type="text" class="form-control" placeholder="Postcode*" required>
                                <div class="invalid-feedback">
                                    Please provide a valid postcode.
                                </div>
                            </div>
      
                        </div>


                        <br><br>

                        <!-- Title -->
                        <h1>Event Details</h1>
                        <h5>Please enter your event details</h5>


                        <br><br>


                        <!-- Name of Event -->
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Name of Event*" required>
                                <div class="invalid-feedback">
                                    What's your event called?
                                </div>
                            </div>


                        <!-- Description of Event -->
                            <div class="form-group">
                                <textarea class="form-control mw-100" placeholder="Description of Event*" required></textarea>
                                <div class="invalid-feedback">
                                    Please descibe your event.
                                </div>
                            </div>


                        <!-- Street Name -->
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Street Name">
                        </div>


                        <!-- Suburb -->
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Suburb">
                        </div>


                        <div class="row">

                            <!-- City -->
                            <div class="form-group col-sm-9">
                                <input type="text" class="form-control" placeholder="City">
                            </div>


                            <!-- Postcode-->
                            <div class="form-group col-sm-3">
                                <input type="text" class="form-control" placeholder="Postcode">
                            </div>

                        </div>


                        <div class="row">

                            <!-- Pickup Date-->
                            <div class="form-group col-sm-6">
                                <h4 class="text-left">Pickup Date</h4>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <span class="glyphicon glyphicon-lock"></span>
                                    </div>
                                    <input type="text" disabled class="form-control" placeholder="22/09/2020">
                                </div>
                            </div>

                            <!-- Return Date -->
                            <div class="form-group col-sm-6">
                                <h4 class="text-left">Return Date</h4>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <span class="glyphicon glyphicon-lock"></span>
                                    </div>
                                    <input type="text" disabled class="form-control" placeholder="25/09/2020">
                                </div>
                            </div>
                        </div>

                        <br>

                        <!-- Terms and Conditions Check-->
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" required>
                            <label class="form-check-label">
                                <h5>I agree to the <u> <a class="nav-link text-dark" asp-area="" asp-controller="ApplicantBookingProcess" asp-action="TermsOfService">Terms Of Service</a></u></h5>
                            </label>
                            <div class="invalid-feedback">
                                Please agree on terms of services.
                            </div>
                        </div>
                        <br>

                        <!-- Submit form -->
                        <a class="nav-link text-dark" asp-area="" asp-controller="ApplicantBookingProcess" asp-action="Confirmation">
                            <button class="button" type="submit">
                                <h5>SUBMIT</h5>
                            </button>
                        </a>
                    </form>
                    <!-- Back to calendar screen -->
                    <a class="nav-link text-dark" asp-area="" asp-controller="ApplicantBookingProcess" asp-action="ItemCalandar">
                        <button class="button">
                            <h5>BACK</h5>
                        </button>
                    </a>

                </div>
                <div class="col-lg-3 col-md-3"></div>
            </div>
       

    </div>
</body>
